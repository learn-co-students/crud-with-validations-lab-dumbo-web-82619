<h1>Songs</h1>
<table style="width:50%">
<thead>
  <tr>
    <th>Title</th>
    <th>Artist</th>
    <th>Release Year</th>
    <th>Genre</th>
  </tr>
  </thead>
  <tbody>
  <% @songs.each do |song|  %>
    <tr>
      <td><%= song.title %></td>
      <td><%= link_to song.artist_name, song_path(song) %></td>
        <% if song.released %>
          <td><%= song.release_year %></td>
        <% else %>
          <td>Unreleased</td>
        <% end %>
      <td><%= song.genre %></td>
      <td><%= button_to 'DELETE', song_path(song), method: :delete %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<br>
<%= button_to 'Create a Song', new_song_path, method: :get %>