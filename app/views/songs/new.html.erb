<h1>Create a New Song</h1>

<% if flash[:errors] %>
  <h4 style="color:red"><strong>ERRORS</strong></h4>
  <ul>
  <% flash[:errors].each do |error| %>
    <li style="color:red"><%= error %></li>
  <% end %>
  </ul>
<% end %>

<%= form_for @song do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.label :released %>
  <%= f.check_box :released %><br>

  <%= f.label :release_year %> 
  <%= f.number_field :release_year %><br>

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %><br>

  <%= f.label :genre %>
  <%= f.text_field :genre %><br>
  <br>
  <%= f.submit %>
<% end %>